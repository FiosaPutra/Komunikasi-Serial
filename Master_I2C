#include <Wire.h>

void setup() {
  Wire.begin(21, 22); // SDA, SCL
  Serial.begin(115200);
}

void loop() {
  Wire.beginTransmission(0x08); // alamat slave
  String pesan  = "Tulis pesan";
  Wire.write((const uint8_t*)pesan.c_str(), pesan.length());
  Wire.endTransmission();

  Wire.requestFrom(0x08, 4); // minta 4 byte
  while (Wire.available()) {
    char c = Wire.read();
    Serial.print(c);
  }

  delay(1000);
}
